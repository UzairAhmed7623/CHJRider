<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_pickup_and_dropoff_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/myColorSecond"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pickupPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserra_regular_bold"
                android:letterSpacing="0.05"
                android:text="Pickup: "
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/dropoffPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserra_regular_bold"
                android:letterSpacing="0.05"
                android:text="Drop off: "
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone"/>

        </FrameLayout>


        <TextView
            android:id="@+id/tvArrivalTimeToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/frameLayout"
            android:fontFamily="@font/montserra_regular"
            android:letterSpacing="0.05"
            android:text="mins to arrival"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvArrivalTimeToolbar"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserra_regular"
            android:letterSpacing="0.05"
            android:text="Kitchen name"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnCallToolbar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/phone_icon"
            android:tint="@color/white"
            app:tint="@color/white" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>